<%= render 'shared/admin-tab' %>
<h2>ユーザー一覧</h2>
<table class="table">
  <thead>
    <tr>
      <th scope="col">名前</th>
      <th scope="col">パスワード</th>
      <th scope="col">資格</th>
      <th scope="col">管理者</th>
      <th scope="col">編集</th>
      <th scope="col">削除</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
        <tr>
            <th scope="row"><%=user.name%></th>
            <td><%=user.password %></td>
            <td><%=user.license %></td>
            <td><%=user.admin %></td>
            <td><%= link_to "編集", edit_admin_user_path(user), class:"btn btn-primary" %></td>
            <td><%= link_to "削除", "#{user.id}", class:"btn btn-danger", method: :delete %></td>
        </tr>
    <% end %>
  </tbody>
</table>